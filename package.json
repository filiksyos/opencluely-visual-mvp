{
  "name": "opencluely-visual-mvp",
  "version": "1.0.0",
  "description": "Futuristic AI assistant with Jarvis-like visual interface",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --no-sandbox",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "author": "OpenCluely Visual MVP",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "mermaid": "^10.6.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "electron": "^39.1.2",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0"
  },
  "build": {
    "appId": "com.opencluely.visual",
